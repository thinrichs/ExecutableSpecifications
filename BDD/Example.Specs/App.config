<?xml version="1.0" encoding="utf-8"?>
<configuration>
  
  <configSections>
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
    <sectionGroup name="xUnit">
      <section name="TestRunner" type="System.Configuration.NameValueSectionHandler" />
    </sectionGroup>
  </configSections>
  
  <specFlow>
    <language feature="en-US" />
    <unitTestProvider name="xUnit" />
    <trace stepDefinitionSkeletonStyle="MethodNamePascalCase" />
    <runtime detectAmbiguousMatches="true" stopAtFirstError="false"
                 missingOrPendingStepsOutcome="Inconclusive" />

    <trace traceSuccessfulSteps="true" traceTimings="false"
             minTracedDuration="0:0:0.1" />
  </specFlow>
  
  <appSettings>
    <add key="environment" value="Local" />
    <add key="showBrowserWindow" value="true" />
    <add key="onlyScreenshotErrors" value="false" />
    <add key="saveScreenShotsTo" value=".\testreports\screens" />
  </appSettings>
  
</configuration>